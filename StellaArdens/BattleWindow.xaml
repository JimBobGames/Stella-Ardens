<Window x:Class="StellaArdens.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:StellaArdens.UI"
        xmlns:local="clr-namespace:StellaArdens"
        mc:Ignorable="d"
        Title="BattleWindow" Height="450" Width="800" Background="Beige" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <DockPanel LastChildFill="True">
        <Button Content="Dock=Top" DockPanel.Dock="Top"/>
        <Button Content="Dock=Bottom" DockPanel.Dock="Bottom"/>
        <Button Content="Dock=Left"/>
        <Button Content="Dock=Right" DockPanel.Dock="Right"/>
            <ScrollViewer >
                <StackPanel x:Name="StackPanel1">
                    <Button Content="First Item" />
                    <Button Content="Second Item" />
                    <Button Content="Third Item" />
                </StackPanel>
            </ScrollViewer>
    </DockPanel>

<!--
  
-->
</Window>
